<!-- departmentList.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Department List</title>
  <!-- Liên kết với Bootstrap 5 CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <%- include('../partials/navbarAdmin') %>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-8">
        <h1>Department List</h1>
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% departments.forEach((department) => { %>
              <tr>
                <td><%= department.id %></td>
                <td><%= department.name %></td>
                <td>
                  <a href="/admin/departments/edit/<%= department.department_manager_id %>" class="btn btn-primary btn-sm">Edit</a>
                  <a href="/admin/departments/delete/<%= department.department_manager_id %>" class="btn btn-danger btn-sm">Delete</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Liên kết với Bootstrap 5 JS và các thư viện JavaScript cần thiết -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.min.js"></script>
</body>
</html>
