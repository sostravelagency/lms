<!-- viewDepartmentStudents.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>View Department Students</title>
  <!-- Liên kết với Bootstrap 5 CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h1>View Department Students</h1>
    <!-- Form chọn khoa -->
    <form action="/admin/faculty/student" method="get">
      <div class="mb-3">
        <label for="department" class="form-label">Select Department</label>
        <select class="form-select" id="department" name="department" required>
          <% departments.forEach((department) => { %>
            <option value="<%= department.department_id %>"><%= department.department_name %></option>
          <% }); %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">View Students</button>
    </form>

    <% if (students && students.length > 0) { %>
      <div class="mt-5">
        <h2>Students in <%= selectedDepartment.department_name %></h2>
        <!-- Bảng hiển thị danh sách sinh viên của khoa -->
        <table class="table">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Full Name</th>
              <th scope="col">Email</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach((student) => { %>
              <tr>
                <td><%= student.student_id %></td>
                <td><%= student.student_name %></td>
                <td><%= student.student_email %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <!-- Liên kết với Bootstrap 5 JS và các thư viện JavaScript cần thiết -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.10.2/umd/popper.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.min.js"></script>
</body>
</html>
